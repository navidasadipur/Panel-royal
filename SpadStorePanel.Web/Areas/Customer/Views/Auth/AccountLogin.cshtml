@using SpadStorePanel.Web.ViewModels
@model LoginRegisterModel
@{
    ViewBag.Title = "ورود/ ثبت نام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contant">
    <div id="banner-part" class="banner inner-banner">
        <div class="container">
            <div class="bread-crumb-main">
                <h1 class="banner-title">ورود/ ثبت نام</h1>
                <div class="breadcrumb">
                    <ul class="inline">
                        <li><a href="/">خانه</a></li>
                        <li>ورود / ثبت نام</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-8 ">

                    <div class="message">

                    </div>

                    @using (Html.BeginForm("AccountLogin", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "main-form full", role = "form", id="LoginRegisterForm" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="row" id="step-login-container">
                            <div class="col-12 mb-20">
                                <div class="heading-part align-center">
                                    <h2 class="heading">ورود / ثبت نام</h2>
                                </div>
                            </div>
                            
                            <div class="col-12 step-container">
                                <div class="login-step" id="step-1">

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Phone)
                                        @Html.TextBoxFor(m => m.Phone)
                                        @Html.ValidationMessageFor(m => m.Phone, "")
                                    </div>

                                    <div class="form-group">
                                        <button onclick="SendCode(event)" class="btn-color right-side">ارسال کد</button>
                                    </div>

                                </div>

                                <div class="login-step" id="step-2">

                                    <div class="form-group">
                                        <label for="ConfirmCode">کد تایید <span id="phoneNumber"></span></label>
                                        @Html.TextBoxFor(m => m.ConfirmCode)
                                        @Html.ValidationMessageFor(m => m.ConfirmCode, "")
                                    </div>

                                    <div class="form-group">
                                        <div>
                                            ارسال مجدد کد: <span class="send-code-timer"></span><a href="javascript:void(0);" onclick="SendCode(event)" class="resend-code">ارسال </a>
                                            <div><small><a href="javascript:void(0);" onclick="ChangeNumber()">اصلاح شماره</a></small></div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <button name="submit" type="submit" id="btnSubmit" class="btn-color right-side">ورود</button>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .field-validation-error span {
        color: darkred;
    }
</style>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


