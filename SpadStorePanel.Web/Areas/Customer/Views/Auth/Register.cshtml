@using SpadStorePanel.Web.ViewModels
@model RegisterCustomerViewModel
@{
    ViewBag.Title = "ثبت نام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contant">
    <div id="banner-part" class="banner inner-banner">
        <div class="container">
            <div class="bread-crumb-main">
                <h1 class="banner-title">ثبت نام</h1>
                <div class="breadcrumb">
                    <ul class="inline">
                        <li><a href="/">خانه</a></li>
                        <li>ثبت نام</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-8 ">
                    @using (Html.BeginForm("Register", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "main-form full", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-12 mb-20">
                                <div class="heading-part align-center">
                                    <h2 class="heading">ثبت نام</h2>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FirstName)
                                    @Html.TextBoxFor(m => m.FirstName)
                                    @Html.ValidationMessageFor(m => m.FirstName, "")
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.LastName)
                                    @Html.TextBoxFor(m => m.LastName)
                                    @Html.ValidationMessageFor(m => m.LastName, "")
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserName)
                                    @Html.TextBoxFor(m => m.UserName)
                                    @Html.ValidationMessageFor(m => m.UserName, "")
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Mobile)
                                    @Html.TextBoxFor(m => m.Mobile)
                                    @Html.ValidationMessageFor(m => m.Mobile, "")
                                </div>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-12">
                                <button name="submit" type="submit" class="btn-color right-side">ثبت نام</button>
                            </div>
                            <div class="col-12">
                                <div class="new-account align-center mt-20">
                                    <span>حساب کاربری دارید ؟</span>
                                    <a class="link" title="ثبت نام کنید" href="/Customer/Auth/Login">وارد شوید</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .field-validation-error span {
        color: darkred;
    }
</style>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
