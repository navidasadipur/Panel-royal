@model SpadStorePanel.Web.ViewModels.RegisterCustomerViewModel


<main class="site-main  main-container no-sidebar">
    <div class="container">
        <div class="row">
            <div class="main-content col-md-12">
                <div class="page-main-content">
                    <div class="lynessa">
                        <div class="lynessa-notices-wrapper"></div>
                        <div class="u-columns col2-set" id="customer_login">
                            <div class="u-column1 col-1">
                                <h2>ورود</h2>
                                <form class="lynessa-form lynessa-form-login login" method="post">
                                    <p class="form-row">
                                        <a href="~/Customer/auth/login" class="lynessa-Button button" type="button" name="register" value="Register">ورود</a>
                                    </p>
                                </form>
                            </div>
                            <div class="u-column2 col-2">
                                <h2>ثبت نام</h2>
                                @using (Html.BeginForm("Register", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "lynessa-form lynessa-form-register register", role = "register-form", id = "register-form" }))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.AntiForgeryToken()

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", autocomplete = "email", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", autocomplete = "email", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", autocomplete = "email", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", autocomplete = "email", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })

                                    </p>

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", autocomplete = "current-password", @size = "40", @type = "Password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", autocomplete = "current-password", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>

                                    <p class="lynessa-FormRow form-row">
                                        <input type="hidden" id="lynessa-register-nonce"
                                               name="lynessa-register-nonce" value="45fae70a87"><input type="hidden"
                                                                                                       name="_wp_http_referer"
                                                                                                       value="/lynessa/my-account/">
                                        <button type="submit" class="lynessa-Button button" name="register"
                                                value="Register">
                                            ثبت نام
                                        </button>
                                    </p>

                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<main class="site-main  main-container no-sidebar">
    <div class="container">
        <div class="row">
            <div class="main-content col-md-12">
                <div class="page-main-content">
                    <div class="lynessa">
                        <div class="lynessa-notices-wrapper"></div>
                        <div class="u-columns col2-set" id="customer_login">
                            <div class="u-column1 col-1">
                                <h2>ورود</h2>
                                <form class="lynessa-form lynessa-form-login login" method="post">
                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        <label for="username">
                                            نام کاربری یا ایمیل:&nbsp;<span class="required">*</span>
                                        </label>
                                        <input type="text" class="lynessa-Input lynessa-Input--text input-text"
                                               name="username" id="username" autocomplete="username" value="">
                                    </p>
                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        <label for="password">رمز عبور:&nbsp;<span class="required">*</span></label>
                                        <input class="lynessa-Input lynessa-Input--text input-text"
                                               type="password" name="password" id="password"
                                               autocomplete="current-password">
                                    </p>
                                    <p class="form-row">
                                        <input type="hidden" id="lynessa-login-nonce" name="lynessa-login-nonce"
                                               value="832993cb93"><input type="hidden" name="_wp_http_referer"
                                                                         value="/lynessa/my-account/">
                                        <button type="submit" class="lynessa-Button button" name="login"
                                                value="Log in">
                                            ورود
                                        </button>
                                        <label class="lynessa-form__label lynessa-form__label-for-checkbox inline">
                                            <input class="lynessa-form__input lynessa-form__input-checkbox"
                                                   name="rememberme" type="checkbox" id="rememberme" value="forever">
                                            <span> مرا به خاطر بسپار</span>
                                        </label>
                                    </p>
                                    <p class="lynessa-LostPassword lost_password">
                                        <a href="#">فراموشی رمز عبور</a>
                                    </p>

                                </form>
                            </div>
                            <div class="u-column2 col-2">
                                <h2>ثبت نام</h2>
                                <form method="post" class="lynessa-form lynessa-form-register register">
                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        <label for="reg_email">
                                            ایمبل&nbsp;<span class="required">*</span>
                                        </label>
                                        <input type="email" class="lynessa-Input lynessa-Input--text input-text"
                                               name="email" id="reg_email" autocomplete="email" value="">
                                    </p>

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        <label for="password">رمز عبور:&nbsp;<span class="required">*</span></label>
                                        <input class="lynessa-Input lynessa-Input--text input-text"
                                               type="password" name="password" id="password"
                                               autocomplete="current-password">
                                    </p>
                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        <label for="password">تکرار رمز عبور:&nbsp;<span class="required">*</span></label>
                                        <input class="lynessa-Input lynessa-Input--text input-text"
                                               type="password" name="password" id="password"
                                               autocomplete="current-password">
                                    </p>

                                    <p class="lynessa-FormRow form-row">
                                        <input type="hidden" id="lynessa-register-nonce"
                                               name="lynessa-register-nonce" value="45fae70a87"><input type="hidden"
                                                                                                       name="_wp_http_referer"
                                                                                                       value="/lynessa/my-account/">
                                        <button type="submit" class="lynessa-Button button" name="register"
                                                value="Register">
                                            ثبت نام
                                        </button>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

