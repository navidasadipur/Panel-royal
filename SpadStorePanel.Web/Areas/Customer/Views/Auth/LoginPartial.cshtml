@model SpadStorePanel.Web.ViewModels.LoginViewModel


<main class="site-main  main-container no-sidebar">
    <div class="container">
        <div class="row">
            <div class="main-content col-md-12">
                <div class="page-main-content">
                    <div class="lynessa">
                        <div class="lynessa-notices-wrapper"></div>
                        <div class="u-columns col2-set" id="customer_login">
                            <div class="u-column1 col-1">
                                <h2>ورود</h2>

                                @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "lynessa-form lynessa-form-login login", id = "form", role = "login-form" }))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.AntiForgeryToken()

                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">

                                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", @autocomplete = "username", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>
                                    <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", @type = "password", @autocomplete = "current-password", @size = "40" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "wpcf7-form-control-wrap your-name text-danger" })
                                    </p>
                                    <p class="form-row">
                                        <input type="hidden" id="lynessa-login-nonce" name="lynessa-login-nonce"
                                               value="832993cb93"><input type="hidden" name="_wp_http_referer"
                                                                         value="/lynessa/my-account/">
                                        <button type="submit" class="lynessa-Button button" name="login"
                                                value="Log in">
                                            ورود
                                        </button>
                                        <label class="lynessa-form__label lynessa-form__label-for-checkbox inline">
                                            <input class="lynessa-form__input lynessa-form__input-checkbox"
                                                   name="rememberme" type="checkbox" id="rememberme" value="forever">
                                            <span> مرا به خاطر بسپار</span>
                                        </label>
                                    </p>
                                    <p class="lynessa-LostPassword lost_password">
                                        <a href="#">فراموشی رمز عبور</a>
                                    </p>

                                }
                            </div>
                            <div class="u-column2 col-2">
                                <h2>پس از ثبت نام وارد سایت شوید</h2>
                                <form onsubmit=" return false;" class="lynessa-form lynessa-form-register register">
                                    <p class="form-row">
                                        <a href="~/Customer/auth/register" class="lynessa-Button button" type="button" name="register" value="Register">ثبت نام</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    $.validator.unobtrusive.parse("#form");
</script>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
