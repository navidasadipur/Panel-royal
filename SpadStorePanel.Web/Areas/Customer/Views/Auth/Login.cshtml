@using SpadStorePanel.Web.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "ورود به پنل کاربری";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contant">
    <div id="banner-part" class="banner inner-banner">
        <div class="container">
            <div class="bread-crumb-main">
                <h1 class="banner-title">ورود اعضا</h1>
                <div class="breadcrumb">
                    <ul class="inline">
                        <li><a href="/">خانه</a></li>
                        <li>ورود اعضا</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-8 ">
                    @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "main-form full", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-12 mb-20">
                                <div class="heading-part align-center">
                                    <h2 class="heading">ورود اعضا</h2>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserName)
                                    @Html.TextBoxFor(m => m.UserName)
                                    @Html.ValidationMessageFor(m => m.UserName, "")
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password)
                                    @Html.TextBoxFor(m => m.Password, new { type = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, "")
                                </div>
                            </div>
                            <div class="col-12">
                                <button name="submit" type="submit" class="btn-color right-side">ورود</button>
                                <div class="mb-30 dit w-100">
                                    <div class="check-box left-side mt-15">
                                        <span>
                                            <input type="checkbox" name="RememberMe" id="RememberMe" class="checkbox">
                                            <label for="RememberMe" class="mb-0">مرا بخاطر بسپار</label>
                                        </span>
                                    </div>
                                </div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12">
                                <hr>
                                <div class="align-center mt-20">
                                    <a title="Forgot Password" class="link forgot-password mtb-20" href="#">رمز عبور را فراموش کردید ؟</a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="new-account align-center mt-20">
                                    <span>حساب کاربری ندارید ؟</span>
                                    <a class="link" title="ثبت نام کنید" href="/Customer/Auth/Register">ثبت نام کنید</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .field-validation-error span {
        color: darkred;
    }
</style>
@section scripts {
@Scripts.Render("~/bundles/jqueryval")
}
