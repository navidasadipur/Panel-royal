@model List<SpadStorePanel.Core.Models.Offer>


<div class="section-001 section-004">
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-md-12 col-lg-6">
                        <div class="lynessa-banner style-04 left-center">
                            <div class="banner-inner">
                                <figure class="banner-thumb">
                                    <img src="~/Files/OffersImages/@item.Image"
                                         class="attachment-full size-full" alt="img">
                                </figure>
                                <div class="banner-info ">
                                    <div class="banner-content">
                                        <div class="title-wrap">
                                            <h6 class="title">@item.Title</h6>
                                        </div>
                                        <div class="cate"></div>
                                        <div class="button-wrap">
                                            <div class="subtitle">  </div>
                                            <a class="button" target="_self" href="~/Shop?searchstring=@item.Title"><span> خرید</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


