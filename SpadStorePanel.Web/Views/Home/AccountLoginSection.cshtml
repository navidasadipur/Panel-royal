@model SpadStorePanel.Web.ViewModels.LoginViewModel


    <div class="u-column1 col-1">
        <h2>ورود</h2>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form", @class = "lynessa-form lynessa-form-login login" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()

            <p class="lynessa-form-row lynessa-form-row--wide form-row form-row-wide">

                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "lynessa-Input lynessa-Input--text input-text", @name = "username", @id="username", autocomplete="username", @size = "40" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "wpcf7-form-control-wrap your-name" })


                @*<label for="username">
                    نام کاربری یا ایمیل:&nbsp;<span class="required">*</span>
                </label>
