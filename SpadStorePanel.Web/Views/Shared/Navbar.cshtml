@model SpadStorePanel.Web.ViewModels.NavbarViewModel

<header id="header" class="header style-04 header-transparent header-sticky">
    <div class="header-middle">
        <div class="header-middle-inner">
            <div class="header-search-mid">
                <div class="header-search">
                    <div class="block-search">
                        <form role="search" method="get" action="/Shop"
                              class="form-search block-search-form lynessa-live-search-form">
                            <div class="form-content search-box results-search">
                                <div class="inner">
                                    <input autocomplete="off" class="searchfield txt-livesearch input" name="searchString"
                                           value="" placeholder="جستجو .." type="text">
                                </div>
                            </div>
                            @*<input name="post_type" value="product" type="hidden">
                            <input name="taxonomy" value="product_cat" type="hidden">*@

                            <button type="submit" class="btn-submit">
                                <span class="pe-7s-search"></span>
                            </button>
                        </form><!-- block search -->
                    </div>
                </div>
            </div>
            <div class="header-logo-menu">
                <div class="block-menu-bar">
                    <a class="menu-bar menu-toggle" href="#">
                        <span></span>
                        <span></span>
                        <span></span>
                    </a>
                </div>

            </div>
            <div class="header-control">
                <div class="header-control-inner">
                    <div class="meta-dreaming">
                        <div class="menu-item block-user block-dreaming lynessa-dropdown">
                            <a class="block-link" href="~/Customer/auth/login">
                                <span class="pe-7s-user"></span>
                            </a>

                        </div>
                        @Html.Action("CartSection", "Cookie")
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="header-wrap-stick" style="position: relative; top: 30px;">
        <div class="header-position">
            <div class="header-nav">
                <div class="container">
                    <div class="lynessa-menu-wapper"></div>
                    <div class="header-nav-inner">
                        <div class="box-header-nav menu-nocenter" style="position: relative;">

                            <div class="header-logo">
                                <a href="~/home">
                                    <img alt="Lynessa" src="~/Content/client/images/mainlogo3.png" class="logo">
                                </a>
                            </div>



                            <ul id="menu-primary-menu"
                                class="clone-main-menu lynessa-clone-mobile-menu lynessa-nav main-menu">
                                <li id="menu-item-230"
                                    class="menu-item menu-item-type-post_type menu-item-object-megamenu menu-item-230 parent parent-megamenu item-megamenu ">
                                    <a class="lynessa-menu-item-title" title="صفحه اصلی" href="~/home">صفحه اصلی</a>


                                </li>
                                <li id="menu-item-228"
                                    class="menu-item menu-item-type-post_type menu-item-object-megamenu menu-item-228 parent parent-megamenu item-megamenu menu-item-has-children">
                                    <a class="lynessa-menu-item-title" title="محصولات"
                                       href="~/shop">محصولات</a>
                                    <span class="toggle-submenu"></span>
                                    <div class="submenu megamenu megamenu-elements">
                                        <div class="row">
                                            @foreach (var group in Model.ProductCategories)
                                            {
                                                <div class="col-md-4">
                                                    <div class="lynessa-listitem style-01">
                                                        <div class="listitem-inner">
                                                            <h4 class="title">
                                                                <a href="/Shop/@group.Id"
                                                                   target="_self">@group.Title</a>
                                                            </h4>
                                                            <ul class="listitem-list">
                                                                @foreach (var product in group.Products)
                                                                {
                                                                    <li>
                                                                        <a href="/Shop/Details/@product.Id"
                                                                           target="_self">@product.Title</a>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                </li>

                                <li id="menu-item-996"
                                    class="menu-item menu-item-type-post_type menu-item-object-megamenu menu-item-996 parent parent-megamenu item-megamenu">
                                    <a class="lynessa-menu-item-title" title="بلاگ"
                                       href="~/blog">بلاگ</a>


                                </li>
                                <li id="menu-item-237"
                                    class="menu-item menu-item-type-custom menu-item-object-custom  menu-item-237 parent">
                                    <a class="lynessa-menu-item-title" title="درباره ما" href="~/home/about">درباره ما</a>


                                </li>
                                <li id="menu-item-237"
                                    class="menu-item menu-item-type-custom menu-item-object-custom  menu-item-237 parent">
                                    <a class="lynessa-menu-item-title" title="تماس با ما" href="~/home/contactUs">تماس با ما</a>


                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-mobile">
        <div class="header-mobile-left">
            <div class="block-menu-bar">
                <a class="menu-bar menu-toggle" href="#">
                    <span></span>
                    <span></span>
                    <span></span>
                </a>
            </div>
            <div class="header-search lynessa-dropdown">
                <div class="header-search-inner" data-lynessa="lynessa-dropdown">
                    <a href="#" class="link-dropdown block-link">
                        <span class="pe-7s-search"></span>
                    </a>
                </div>
                <div class="block-search">
                    <form role="search" method="get" action="/Shop"
                          class="form-search block-search-form lynessa-live-search-form">
                        <div class="form-content search-box results-search">
                            <div class="inner">
                                <input autocomplete="off" class="searchfield txt-livesearch input" name="searchString" value=""
                                       placeholder="جستجو..." type="text">
                            </div>
                        </div>

                        <button type="submit" class="btn-submit">
                            <span class="pe-7s-search"></span>
                        </button>
                    </form><!-- block search -->
                </div>
            </div>

        </div>
        <div class="header-mobile-right">
            <div class="header-control-inner">
                <div class="meta-dreaming">
                    <div class="menu-item block-user block-dreaming lynessa-dropdown">
                        <a class="block-link" href="/home/account">
                            <span class="pe-7s-user"></span>
                        </a>

                    </div>
                    @Html.Action("CartSectionMobile", "Cookie")
                </div>
            </div>
        </div>

    </div>
</header>







