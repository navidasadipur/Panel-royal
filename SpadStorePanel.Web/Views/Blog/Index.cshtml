@model List<SpadStorePanel.Web.ViewModels.ArticleListViewModel>
@{
    ViewBag.Title = "بلاگ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div id="parent-page" class="parent-page">

        <div class="container rtl">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">خانه</a></li>
                    @if (ViewBag.BreadCrumb != null)
                    {
                        <li class="breadcrumb-item" aria-current="page"><a href="/blog">@ViewBag.Title</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.BreadCrumb</li>
                    }
                    else
                    {    
                        <li class="breadcrumb-item active" aria-current="page"><a href="/blog">@ViewBag.Title</a></li>
                    }

                </ol>
            </nav>

            <div class="row">
                <div class="col-md-8 col-xs-12">

                    @foreach (var item in Model)
                    {
                        <div class="blog-post">
                            <figure class="blog-img">
                                <a href="/Blog/Post/@item.Id">
                                    <img src="/Files/ArticleImages/Thumb/@item.Image" alt="@item.Title" style="width:100%">
                                </a>
                            </figure>
                            <div class="blog-body">
                                <p class="blog-date">
                                    <span>
                                        @item.PersianDate
                                    </span>
                                    |
                                    <span>
                                        نظرات @item.CommentCounter
                                    </span>
                                </p>
                                <h2 class="blog-title">
                                    <a href="/Blog/Post/@item.Id">
                                        @item.Title
                                    </a>
                                </h2>
                                <p class="margin-top-17">
                                    @item.ShortDescription
                                </p>
                            </div>
                        </div>
                    }



